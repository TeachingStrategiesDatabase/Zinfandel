<!-- Search result page - list results of search -->


<% @currentPage.each do |strategy| %>
	<p></p>
	<% title = "Title: " %>
	<% title += strategy.title %>
	<%= link_to title, {:controller => "strategies" , :action => "show" ,:id => strategy.id}  %>


	<%= strategy.body %>
	<%= strategy.tech %>
	<%= strategy.source %>
	<%= link_to "Update", :controller => 'strategies', :action =>'update', id: strategy.id %>
	<%= link_to "Destroy", strategy_path(strategy), method: "delete", id: strategy.id,  data: { confirm: 'Are you sure?' } %>

	<%= label_tag(:kwd, strategy.keywords )  %>
	<%= label_tag(:sid, strategy.id )  %>
<%end%>

<p></p>
<%= link_to_if @page.to_i>1 , 'Previous Page', {:controller => "strategies" , :action => "search" , :department=> @dep, :subject => @sub, :keywords => @kwd, :title => @tit, :author => @aut, :page => (@page.to_i-1)} %>

<%= link_to_if @notLastPage , 'Next Page', {:controller => "strategies" , :action => "search" , :department=> @dep, :subject => @sub, :keywords => @kwd, :title => @tit, :author => @aut, :page => (@page.to_i+1)} %>

<p></p>
<%= link_to 'HomePage', :controller => 'static', :action =>'homepage' %>
