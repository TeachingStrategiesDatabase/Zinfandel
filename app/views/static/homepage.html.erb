<!-- Home page view - searching and all that -->

<%= form_tag({controller:"strategies",action:"search"}, method:"get", class:"searchForm") do %>
	<%= label_tag(:title, "Search Strategies") %>
	<p></p>
	<%= label_tag("Department (shift-click to select, ctrl-click to deselect)") %>
	<%= select_tag(:department, options_for_select(@departmentList), :multiple => true) %>
	<p></p>
	<%= label_tag("Subject (shift-click to select, ctrl-click to deselect)" ) %>
	<%= select_tag(:subject, options_for_select(@subjectList), :multiple => true) %>
	<p></p>
	<%= check_box_tag(:byKeywords) %>
	<%= label_tag(:keywords) %>
	<%= text_field_tag(:keywords) %>
	<p></p>
	<%= check_box_tag(:byTitle) %>
	<%= label_tag(:title) %>
	<%= text_field_tag(:title) %>
	<p></p>
	<%= check_box_tag(:byAuthor) %>
	<%= label_tag(:author) %>
	<%= text_field_tag(:author) %>

	
	<p></p>	
	<%= submit_tag(:search) %>
	<%= button_tag(:cancel,type:'reset') %>
<%end%>
	

<%= link_to 'Insert a strategy', :controller => 'strategies', :action =>'new' %>
